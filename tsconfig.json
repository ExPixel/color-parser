{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module":"commonjs",
        "lib": ["es6"],
        "strict": true,
        "declaration": true,
        "sourceMap": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "noImplicitAny": true,
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    
    "include": [
        "src"
    ],

    "exclude": [
        "node_modules"
    ]
}